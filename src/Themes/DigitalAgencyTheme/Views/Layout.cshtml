<!DOCTYPE html>
<html lang="@Orchard.CultureName()">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@RenderTitleSegments(Site.SiteName, "before")</title>
    <link type="image/x-icon" rel="shortcut icon" href="~/DigitalAgencyTheme/favicon.ico">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- CSS Implementing Plugins -->
    <link rel="stylesheet" href="~/DigitalAgencyTheme/assets/vendor/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/DigitalAgencyTheme/assets/vendor/hs-mega-menu/dist/hs-mega-menu.min.css">

    <!-- CSS Unify Template -->
    <link rel="stylesheet" href="~/DigitalAgencyTheme/assets/css/theme.min.css">

    @*<script asp-name="bootstrap" version="5" at="Foot"></script>
    <script asp-name="DigitalAgencyTheme-js" version="1" at="Foot"></script>
    <style asp-name="DigitalAgencyTheme-css" version="1"></style>
    <style asp-name="font-awesome" version="6"></style>*@
    <resources type="Meta" />
    <resources type="HeadLink" />
    <resources type="Stylesheet" />
    <resources type="HeadScript" />
    @await RenderSectionAsync("HeadMeta", required: false)
</head>
<body dir="@Orchard.CultureDir()">

    <shape type="Header" />

    @await RenderSectionAsync("Header", required: false)
    <main id="content" role="main">
        @await RenderSectionAsync("Hero", required: false)
        @await RenderSectionAsync("Messages", required: false)
        @await RenderBodyAsync()
    </main>
    @if (IsSectionDefined("Footer"))
    {
        <footer>
            <div class="container">
                @await RenderSectionAsync("Footer", required: false)
            </div>
        </footer>
    }

    <shape type="Footer" />

    <shape type="GoTo" />

    <resources type="FootScript" />

    <script src="~/DigitalAgencyTheme/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS Implementing Plugins -->
    <script src="~/DigitalAgencyTheme/assets/vendor/hs-header/dist/hs-header.min.js"></script>
    <script src="~/DigitalAgencyTheme/assets/vendor/hs-mega-menu/dist/hs-mega-menu.min.js"></script>
    <script src="~/DigitalAgencyTheme/assets/vendor/hs-go-to/dist/hs-go-to.min.js"></script>
    <script src="~/DigitalAgencyTheme/assets/vendor/fslightbox/index.js"></script>

    <!-- JS Plugins Init. -->
    <script>
        (function() {
            // INITIALIZATION OF NAVBAR
            // =======================================================
            new HSHeader('#header').init()


            // INITIALIZATION OF MEGA MENU
            // =======================================================
            const megaMenu = new HSMegaMenu('.js-mega-menu', {
                desktop: {
                    position: 'left'
                }
            })


            // INITIALIZATION OF GO TO
            // =======================================================
            new HSGoTo('.js-go-to')
        })()
    </script>

</body>
</html>
